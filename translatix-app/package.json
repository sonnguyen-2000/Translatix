{
  "name": "translatix-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm:dev:next\" \"npm:dev:electron\" \"npm:dev:backend\"",
    "dev:next": "next dev --turbopack",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "dev:backend": "uvicorn app.main:app --reload --app-dir ../translatix-backend",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "electron-store": "^7.0.3",
    "konva": "^9.3.20",
    "lucide-react": "^0.522.0",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-konva": "^19.0.6",
    "react-use": "^17.6.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "use-image": "^1.1.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "concurrently": "^9.2.0",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.sonnguyen.translatix",
    "productName": "Translatix",
    "files": [
      "out/**/*",
      "electron/main.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
